body {
	vertical-align: middle;
}

.dragdealer {
	width: auto;
}
#main-slide {
	width: 768px;
	height: 256px; margin : 0px;
	padding: 0px;
	overflow: hidden;
	margin: auto;
	margin-top: 118px;
}

#slideshow {
	margin: 0px;
	width: 640px;
	height: 256px;
}

#slideshow #handleDialog {
	height: 256px;
	width:1296px;
}

#slideSelectLanguage {
	float: left;
	width:1296px;
	height: 256px;
}

.img1 {
	float: left;
	width: 128px;
	height: 256px;
}

.img {
	float: left;
	width: 256px;
	height: 256px;
}
.side {
	margin-left: 50px;
	margin-right: 50px;
}

.blur_layer{
       position: absolute;
       top: 118px;
       left: 50%;
       width: 100px;
       height: 256px;
}
.left_blur{
       margin-left: -384px;
       background: -webkit-gradient(linear, left top, right top, color-stop(0%,rgba(255,255,255,1)), color-stop(40%,rgba(255,255,255,0.7)), color-stop(100%,rgba(255,255,255,0)));
}
.right_blur{
       margin-left: 284px;
       background: -webkit-gradient(linear, right top, left top, color-stop(0%,rgba(255,255,255,1)), color-stop(40%,rgba(255,255,255,0.7)), color-stop(100%,rgba(255,255,255,0)));
}
