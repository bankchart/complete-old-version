        </TableRow>

        <TableRow
            android:id="@+id/tableRowInterior8"
            android:layout_width="150dp"
            android:layout_height="60dp" >

            <CheckBox
                android:id="@+id/inside_handBrake"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:paddingLeft="40dp"
                android:shadowColor="#00aaff"
