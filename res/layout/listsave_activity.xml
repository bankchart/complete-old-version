<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listMainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:layout_marginTop="-100dp"
    android:layout_centerHorizontal="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/listSaveLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/listsave_border" >

        <!--
        ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>
            </LinearLayout>
        </ScrollView
        -->

        <LinearLayout
            android:id="@+id/linearList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/list"
                android:layout_width="616dp"
                android:layout_height="467dp" >
            </ListView>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="660dp"
        android:layout_centerHorizontal="true"
        android:text="Back"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/admobInRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="760dp"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/listViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listSaveLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Select your checklist"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF" />

</RelativeLayout>